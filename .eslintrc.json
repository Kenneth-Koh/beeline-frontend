{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "google",
    // https://github.com/Gillespie59/eslint-plugin-angular
    "plugin:angular/johnpapa"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-unused-vars": ["error"],
    "semi": ["error", "never"],
    "comma-dangle": ["error", "always-multiline"],
    "radix": ["error", "as-needed"],
    "require-jsdoc": ["warn"]
  },
  "globals": {
    "angular": true
  }
}