{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "google",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "func-style": ["error", "expression", { "allowArrowFunctions": true }],
    "no-unused-vars": ["error"],
    "semi": ["error", "never"],
    "comma-dangle": ["error", "always-multiline"],
    "radix": ["error", "as-needed"],
    "require-jsdoc": ["warn"],
    "no-console": ["error", {"allow": ["warn", "error"]}]
  },
  "globals": {
    "angular": true,
    "google": true,
    "chcp": true,
    "IonicDeeplink": true,
    "device": true,
    "cordova": true,
    "StatusBar": true,
    "Stripe": true,
    "StripeCheckout": true
  }
}
