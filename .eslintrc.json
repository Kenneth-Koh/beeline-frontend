{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:angular/johnpapa"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-unused-vars": ["error"],
    "semi": ["error", "never"],
    "comma-dangle": ["error", "always-multiline"],
    "radix": ["error", "as-needed"],
    "require-jsdoc": ["warn"],
    "no-console": ["error", {"allow": ["warn", "error"]}],
    "space-before-function-paren": ["error", "always"]
  },
  "globals": {
    "angular": true,
    "google": true,
    "chcp": true
  }
}