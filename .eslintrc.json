{
  "parser": "babel-eslint",
  "extends": [
    // https://github.com/Gillespie59/eslint-plugin-angular
    "plugin:angular/johnpapa",
    "google"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "no-unused-vars": ["error"],
    "semi": ["error", "never"],
    "comma-dangle": ["error", "always-multiline"],
    "radix": ["error", "as-needed"],
    "require-jsdoc": ["warn"],
    "max-len": ["warn"]
  },
  "globals": {
    "angular": true
  }
}